{
	"id": "net.minetest.app",
	"version": "0.4.15",
	"runtime": "org.freedesktop.Platform",
	"runtime-version": "1.6",
	"sdk": "org.freedesktop.Sdk",
	"command": "minetest",
	"rename-desktop-file": "minetest.desktop",
	"rename-icon": "minetest",
	"finish-args": [
		"--socket=x11",
		"--socket=pulseaudio",
		"--device=dri",
		"--filesystem=~/.minetest",
		"--share=network"
	],
	"cleanup": [
		"/include",
		"/lib/pkgconfig",
		"/lib/*.la",
		"/lib/*.a",
		"/share/aclocal"
	],
	"modules": [
		{
			"name": "libirrlicht",
			"sources": [
				{
					"type": "archive",
					"url": "http://downloads.sourceforge.net/irrlicht/irrlicht-1.8.4.zip",
					"sha256": "f42b280bc608e545b820206fe2a999c55f290de5c7509a02bdbeeccc1bf9e433"
				},
				{
					"type": "file",
					"path": "irrlicht-configure",
					"dest-filename": "configure"
				},
				{
					"type": "patch",
					"path": "irrlicht-use-system-libs.diff"
				},
				{
					"type": "patch",
					"path": "irrlicht-link-against-needed-libs.diff"
				}
			]
		},
		{
			"name": "libluajit",
			"sources": [
				{
					"type": "archive",
					"url": "http://luajit.org/download/LuaJIT-2.0.5.tar.gz",
					"sha256": "874b1f8297c697821f561f9b73b57ffd419ed8f4278c82e05b48806d30c1e979"
				},
				{
					"type": "file",
					"path": "luajit-configure",
					"dest-filename": "configure"
				}
			]
		},
		{
			"name": "libopenal-soft",
			"sources": [
				{
					"type": "archive",
					"url": "https://github.com/kcat/openal-soft/archive/openal-soft-1.18.0.tar.gz",
					"sha256": "ad9095f0b9b62903f3a43e2c7df429a44d563aa0c93f7931338ab8fc4035b5c4"
				},
				{
					"type": "file",
					"path": "openal-soft-configure",
					"dest-filename": "configure"
				}
			]
		},
		{
			"name": "minetest",
			"sources": [
				{
					"type": "archive",
					"url": "https://github.com/minetest/minetest/archive/0.4.15.tar.gz",
					"sha256": "5684e6118e3484f8901323f1ca4179202659010b33c72f02bc03df792493e3a9"
				},
				{
					"type": "file",
					"path": "minetest-configure",
					"dest-filename": "configure"
				},
				{
					"type": "archive",
					"url": "https://github.com/minetest/minetest_game/archive/0.4.15.tar.gz",
					"sha256": "f583ea55f511bbcc106c60f7d488ec3fe6b961efc3fd648603b6acd0189d7d8a",
					"dest": "games/minetest_game"
				}
			]
		}
	]
}

